{
  "name": "bonita-express-backend",
  "version": "1.0.0",
  "description": "Backend Express para conectar con la API de Bonita Software",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-server.js",
    "test:health": "curl http://localhost:3001/health || echo 'Make sure server is running with: npm start'",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:build": "docker build -t projectplanning-backend .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "db:reset": "docker-compose exec mysql mysql -u root -prootpassword -e 'DROP DATABASE IF EXISTS projectplanning; CREATE DATABASE projectplanning;' && docker-compose restart backend"
  },
  "keywords": [
    "express",
    "bonita",
    "api",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "cookie-parser": "^1.4.6",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}