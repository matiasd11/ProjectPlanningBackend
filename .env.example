# Variables de entorno para Bonita Software
BONITA_SERVER_URL=http://localhost:8080
BONITA_USERNAME=install
BONITA_PASSWORD=install

# Puerto del servidor Express
PORT=3001

# Configuración del servidor
NODE_ENV=development

# CORS Origins permitidos (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=projectplanning
DB_USER=projectuser
DB_PASSWORD=projectpass
DB_ROOT_PASSWORD=rootpassword

# JWT Secret para autenticación
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000