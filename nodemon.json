{
  "watch": [
    "server.js",
    "routes",
    "models",
    "config",
    "services",
    "middleware"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/**",
    "*.test.js",
    "*.spec.js",
    ".git/**",
    "docker/**",
    "Dockerfile*",
    "docker-compose*.yml"
  ],
  "exec": "node server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true
}
